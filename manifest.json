{
  "name": "YouTube Timestamp Voter",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Upvote/downvote moments in YouTube videos with timestamps.",
  "permissions": ["identity", "storage", "tabs", "scripting"],
  "oauth2": {
    "client_id": "YOUR_API_KEY.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://your-backend-domain.com/*",
    "http://localhost:3000/*",
    "https://www.googleapis.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "YT Votes",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
